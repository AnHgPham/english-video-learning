# ===================================
# ENVIRONMENT CONFIGURATION
# ===================================
# Copy this file to .env and fill in your actual values

# App Configuration
NODE_ENV=development
APP_NAME="English Video Learning Platform"
APP_URL=http://localhost:3000
API_URL=http://localhost:8000

# Database (MySQL)
DATABASE_URL=mysql://root:password@mysql:3306/english_video_learning
MYSQL_ROOT_PASSWORD=password
MYSQL_DATABASE=english_video_learning

# Redis
REDIS_URL=redis://redis:6379/0

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/
RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=guest

# MinIO (S3-compatible local storage)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_ENDPOINT=minio:9000
MINIO_BUCKET_VIDEOS=videos
MINIO_BUCKET_SUBTITLES=subtitles
MINIO_BUCKET_THUMBNAILS=thumbnails
MINIO_BUCKET_AUDIO=audio
MINIO_BUCKET_CLIPS=clips

# AWS S3 (Production - comment out for local dev)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=english-video-learning

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=10080

# AI Services
GEMINI_API_KEY=your_gemini_api_key_here
WHISPERX_API_URL=http://whisperx:8001
SEMANTIC_CHUNKER_URL=http://semantic-chunker:8002
SMART_CLIPPER_URL=http://smart-clipper:8003

# Elasticsearch
ELASTICSEARCH_URL=http://elasticsearch:9200
ELASTICSEARCH_INDEX_TRANSCRIPTS=video_transcripts

# Celery
CELERY_BROKER_URL=amqp://guest:guest@rabbitmq:5672/
CELERY_RESULT_BACKEND=redis://redis:6379/1

# Rate Limiting
RATE_LIMIT_FREE_CLIPS_PER_DAY=5
RATE_LIMIT_PREMIUM_CLIPS_PER_DAY=999

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Monitoring (Optional - for production)
# SENTRY_DSN=
# DATADOG_API_KEY=

# Payment (Stripe - for premium features)
# STRIPE_PUBLIC_KEY=
# STRIPE_SECRET_KEY=
# STRIPE_WEBHOOK_SECRET=
